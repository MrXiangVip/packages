<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_father_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_40"
        android:src="@mipmap/aicon_father_top_bg"
        app:layout_constraintDimensionRatio="524:104"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.916" />

    <com.mediatek.hralauncher.widget.layout.ShapeConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_father_top"
        app:layout_constraintWidth_percent="0.916"
        app:sa_cornerRadius="@dimen/dp_10"
        app:sa_strokeColor="#C5DDFD"
        app:sa_strokeWidth="@dimen/dp_0_5">

        <TextView
            android:id="@+id/bind_student_tv1_father"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请家长关注公众号并绑定智能学习机"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toTopOf="@+id/bind_student_tv2_father"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/bind_student_tv2_father"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="绑定智能学习机后,家长可以随时了解孩子学习状况,并对智能学习机进行管理"
            android:textColor="@color/color666666"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toBottomOf="@+id/guideline"
            app:layout_constraintLeft_toLeftOf="@id/bind_student_tv1_father"
            app:layout_constraintRight_toRightOf="@id/bind_student_tv1_father"
            app:layout_constraintTop_toBottomOf="@id/bind_student_tv1_father" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_gzh_father"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ashape_gzh_all_bg"
            app:layout_constraintDimensionRatio="180:160"
            app:layout_constraintHeight_percent="0.68"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cl_stu_father"
            app:layout_constraintTop_toTopOf="@+id/guideline">

            <ImageView
                android:id="@+id/iv_gzh_top_father"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:src="@drawable/ashape_gzh_top_bg"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_one_father"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@mipmap/aicon_one"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="关注公众号"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_one_father"
                app:layout_constraintLeft_toRightOf="@id/iv_one_father"
                app:layout_constraintTop_toTopOf="@id/iv_one_father" />

            <ImageView
                android:id="@+id/ivCommonNumber_father"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_21"
                android:src="@mipmap/image_manager_qr"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.537"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bind_step_tv1_father" />

            <TextView
                android:id="@+id/bind_step_tv1_father"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="微信扫一扫关注公众号【春田学园Ai家长通】"
                android:textColor="#FF4B4F54"
                android:textSize="@dimen/sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_gzh_top_father" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_stu_father"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ashape_gzh_all_bg"
            app:layout_constraintDimensionRatio="180:160"
            app:layout_constraintHeight_percent="0.68"
            app:layout_constraintLeft_toRightOf="@id/cl_gzh_father"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline">

            <ImageView
                android:id="@+id/iv_gzh_top2_father"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:src="@drawable/ashape_gzh_top_bg"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_two_father"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@mipmap/aicon_two"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="绑定智能学习机"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_two_father"
                app:layout_constraintLeft_toRightOf="@id/iv_two_father"
                app:layout_constraintTop_toTopOf="@id/iv_two_father" />

            <ImageView
                android:id="@+id/bindStudyIv_father"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_21"
                app:layout_constraintHeight_percent="0.537"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bind_step_tv2_father" />

            <TextView
                android:id="@+id/bind_step_tv2_father"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="进入公众号，点击【学习机管理】，扫码绑定设备"
                android:textColor="#FF4B4F54"
                android:textSize="@dimen/sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_gzh_top2_father" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.235" />

    </com.mediatek.hralauncher.widget.layout.ShapeConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>