<?xml version="1.0" encoding="utf-8"?>
<com.example.camera.widget.CoverGroupButtonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oppo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@android:color/transparent"
    android:id="@+id/group_pref"
    >

    <TextView
        android:id="@+id/group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="40dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/group_radio_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ic_container_background">
        </LinearLayout>
        <Button
            android:id="@+id/cover"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="110dp"
            />
<!--        android:background="@drawable/setting_button_bg"-->
    </FrameLayout>

</com.example.camera.widget.CoverGroupButtonLayout>